    style.
      body{
       background-color: #f3fdfe ;
       
      }
      h1{
        font-family: 'Dancing Script', cursive;
        display: flex;
        justify-self: center;
      }
      .navContainer{
        height: 80px;
        display: flex;
        font-size: 1rem;
        position: sticky;
        border-style: solid;
        border-top: none;
        border-left: none;
        border-right: none;
