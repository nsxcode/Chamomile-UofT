          justify-self: center;
          cursor: pointer;
          display: flex;
          align-items: center;
          font-family: 'Genos', sans-serif;
          font-size: 34px;
      .choosefilebtn{
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
      }
      }
